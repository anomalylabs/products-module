<ul class="nav nav-tabs">
    <li class="active">
        <a href="#product-details" data-toggle="tab">Details</a>
    </li>
    <li>
        <a href="#product-attributes" data-toggle="tab">Attributes</a>
    </li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="product-details">

        <br>

        {{ product.details.render|raw }}
    </div>
    <div class="tab-pane" id="product-attributes">

        <br>

        <table class="table table-bordered">
            <tbody>
            {% if product.brand_id %}
                <tr>
                    <th>Brand</th>
                    <td>{{ html_link(product.brand.route('view'), product.brand.name) }}</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
